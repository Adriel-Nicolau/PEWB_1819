
@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "ListRole";
}
<br />
<br />
<h2>Lista de Roles</h2>

<br />
<br />
<br />

<!-- no onclick vou para outra pagina Argumentos(Action,Controller) -->
<button type="button" class="btn btn-primary" onclick=" window.location.href = '@Url.Action("CreateRole", "Manage")';">Criar Role</button>
<br />
<br />
<br />
<table style="width:800px" class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Opções</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <th align="center" scope="row"> @Html.DisplayFor(modelItem => item.Id)</th>

            <td align="center">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td align="center">
                @Html.ActionLink("Editar", "EditRole", new { id = item.Id })
            </td>
        </tr>

    }

</table>


<div class="control-label col-md-2">
    @Html.ActionLink("Voltar", "Index")
</div>

