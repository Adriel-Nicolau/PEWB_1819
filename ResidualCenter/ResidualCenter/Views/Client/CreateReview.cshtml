@model ResidualCenter.Models.ViewModels.ReviewViewModel.CreateReview
@{

    ViewBag.Title = "CreateReview";
}


<br />
<br />
<h2>Review</h2>

<br />
<br />
<br />


@using (Html.BeginForm("CreateReview", "Client", FormMethod.Post, new { id = "review", @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Content, new { rows = "6", cols = "40", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Rating, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Rating, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.HiddenFor(model => model.ServiceRequestID)
        @Html.HiddenFor(model => model.EntityID)
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" form="review" class="btn btn-default" value="Enviar" />
        </div>
    </div>
}

<div class="control-label col-md-2">
    @Html.ActionLink("Voltar", "ListRequestedServices")
</div>

